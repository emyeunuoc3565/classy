<% if @comment.errors.blank? %>
  $("#review-details-<%= @review.id %> .comment-list")
    .append("<%= j (render 'shared/comments/comment', comment: @comment) %>");
  $("#review-details-<%= @review.id %> .comments-count")
    .text("<%= t('.show_comments', count: @review.comments_count) %>");
  $("#review-details-<%= @review.id %> .new-comment-form").empty();
  $("#review-details-<%= @review.id %> .new-comment").show();
<% else %>
  $(".comment-error-messages").html("<%= j render 'layouts/shared/flash' %>");
<% end %>
