<%= render "shared/nav_bar/devise" %>
<div class="container mg-top-50">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="login-panel panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title"><%= t ".forgot_your_password" %></h3>
					</div>
					<div class="panel-body">
						<div id="flash-messages">
							<%= render "layouts/shared/flash" %>
						</div>
						<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
							<div class="field">
								<%= f.label :email, User.human_attribute_name(:email) %><br />
								<%= f.email_field :email, autofocus: true, class: "form-control"  %>
							</div>

							<div class="actions mg-top-10">
								<%= f.submit t(".send_me"), class: "btn btn-yellow w-100-percent bold pd-10" %>
							</div>
						<% end %>
						<div>
							<%= render "devise/shared/links" %>
						</div>
						<div>
							<button class="btn btn-facebook w-100-percent bold pd-10 mg-bottom-10">Đăng nhập với Facebook</button>
							<button class="btn btn-google w-100-percent bold pd-10 mg-bottom-10">Đăng nhập với Google</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>















